[flake8]
# Exclude third-party vendored libraries packaged with the Lambda code so that
# linting focuses on *our* application logic only.
exclude =
    .venv,
    .aws-sam,
    __pycache__,
    build,
    dist,
    src/messaging_lambda/whatsapp/*,
    src/staging_lambda/*
# Project style rules (mirrors template-sender-engine)
max-line-length = 127
max-complexity = 10
# Allow some stylistic warnings that are not critical
ignore = E203,W503 